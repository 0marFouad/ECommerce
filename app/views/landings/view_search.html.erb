<div class="container">
  <h1>Advanced Search</h1>




  <%= form_tag(custom_search_page_path, :method => "get", class: 'form-inline my-2 my-lg-0') do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control mr-sm-2" %>
    </div>
      <div class="input-group">
        <%= label_tag :category_id %><br />
        <%= collection_select(:category_id,:category_id, Category.order(:name), :id, :name) %>
      </div>
      <div class="input-group">
        <%= label_tag :min_price, "Price Range" %><br />
        <%= text_field_tag :min_price %> -
        <%= text_field_tag :max_price %>
      </div>
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  <% end %>
</div>
