<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Orders</h1>

  <table>
    <thead>
    <tr>
      <th>Shipping date</th>
      <th>Shipping address</th>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.shipping_date %></td>
        <td><%= order.shipping_address %></td>
        <td><%= order.user.name %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path %>

</div>